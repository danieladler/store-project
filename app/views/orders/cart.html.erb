<div class='container page-content'>
  <div class="welcome">
    <% if @current_user %>
      Hello, <span class="user-name"><%=@current_user.username%></span>. Here is your cart:</h1>
    <% end %>
  </div>

  <div class="row">
    <% if @current_order.items.count == 0 %>
      <span class="col-lg-12 empty-cart-message">Your cart is empty. Go buy something!</span>
    <% else %>
      <% @current_order.items.each do |i| %>
        <div class<%=  %>"row">
          <ul class="col-lg-10 col-lg-push-1 cart-item-block">

            <!-- BEANIE
            standard price: $8.00
            quantity: 2
            subtotal: $16.00 -->

            <li class="col-lg-2 cart-item-image"><%= link_to image_tag(i.product_option.product.small_image_url), show_product_path(i.product_option.product.id)  %></li>
            <li class="col-lg-2 cart-item-name" ><%= link_to i.product_option.product.name, show_product_path(i.product_option.product.id) %>  </li>
            <li class="col-lg-2 cart-item-price"><%= "#{i.product_option.name}: "%><br>$<%= sprintf('%.2f', (i.price/100)) %></li>
            <li class="col-lg-2 cart-item-qty"  >Quantity in cart:<br> <%= i.quantity %>   </li>
            <li class="col-lg-2 cart-item-subtotal" >Subtotal:<br>$<%= sprintf('%.2f', (i.price/100) * i.quantity) %>   </li>
            <li class="col-lg-2 delete-item">
              <form action="/items/<%=i.id%>" method="POST">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" class="btn btn-danger" value="Remove From Cart" data-confirm:"Are you sure?">
              </form>
            </li>
        </div>
        </ul>
      <% end  %>
    <% end  %>
  </div>

  <div class="row">
    <div class="col-lg-3 col-lg-push-9 order-cost">
      <strong>Total:</strong> $<%= sprintf('%.2f', (@current_order.total/100)) %>
    </div>
  </div>

  <div class="row cart-next-options">
    <button class="col-lg-4 col-lg-push-1 btn btn-warning btn-xl"> <%= link_to "Keep Shopping", home_path %></button>
    <button class="col-lg-4 col-lg-push-3 btn btn-success btn-xl"> <%= link_to "Checkout" , checkout_path %></button>
  </div>
</div>

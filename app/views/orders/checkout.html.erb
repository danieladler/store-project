<div class='container page-content'>
  <div class="welcome">
    <% if @current_user %>
      Hello, <span class="user-name"><%=@current_user.username%></span>. Here is your final order:</h1>
    <% end %>
  </div>

  <div class="order-cost">
    <strong>Total:</strong> $<%= sprintf('%.2f', (@current_order.total/100)) %>
  </div>

  <div class="add-order-details">
    <form action="/orders/<%=@current_order.id%>" method="POST">
        <input type="hidden" name="authenticity_token"   value="<%= form_authenticity_token %>" />
        <input type="hidden" name="_method"              value="PATCH">
        <label for="order[shipping_address]">Shipping Address:</label>
        <input type="text"   name="order[shipping_address]">
        <br>
        <label for="order[name]">Name:</label>
        <input type="text"   name="order[name]">
        <br>
        <input type="submit" value="Submit Order">
    </form>
  </div>

</div>

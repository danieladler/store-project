
  <div class="welcome">
    <% if @current_user %>
      Hello, <span class="greeting"><%=@current_user.email%></span>. Here are some products:</h1>
    <% else %>
      <span class="greeting">Hello.</span> Here are some products:
    <% end %>
  </div>

  <ul class = "all-product-list">
    <% @products.each do |p| %>
      <li class="index-product-block">
        <ul class="product-attr-list">
          <li class="product-image">
            <%= link_to image_tag("https://s3-us-west-2.amazonaws.com/store-project/placekitten-product-homepage-251-250.jpeg"), show_product_path(p.id) %>
          </li>
          <li>Name: <%= link_to p.name, show_product_path(p.id) %></li>
          <% if p.product_options.any? %>
            <li> <%= p.product_options.find_by(name:"standard price").name%>:<%= sprintf('%.2f', (p.product_options.find_by(name:"standard price").price_in_cents/100))%></li>
          <% else %>
            <li> Price TBD </li>
          <% end %>
        </ul>
      </li>
    <% end %>
  </ul>


  <div class="welcome">
    <% if @current_user %>
      Hello, <span class="greeting"><%=@current_user.email%></span>. Here are some products:</h1>
    <% else %>
      <span class="greeting">Hello.</span> Here are some products:
    <% end %>
  </div>

  <% @products.each do |p| %>
    <ul class="product-starter-list">
      <li><strong>Name:</strong> <%= link_to p.name, show_product_path(p.id) %></li>
      <% if p.product_options.any? %>
        <li><strong>Price:</strong> <%= sprintf('%.2f', (p.product_options.find_by(name:"standard price").price_in_cents/100))%></li>

      <% else %>
        <li> Price TBD </li>
      <% end %>
      <li><strong>Image:</strong> TBD! </li>
      <br>
    </ul>
  <% end %>

  

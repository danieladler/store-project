<div class='container page-content'>
  <div class="row">
    <div class="col-lg-12 welcome">
      <% if @current_user %>
        Hello, <span class="user-name"><%=@current_user.username%></span>. Here are some products:
      <% else %>
        Hello. Here are some products:
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class = "col-lg-12 all-product-list">
      <% @products.each do |p| %>
        <div class="col-lg-6 index-product-block">
          <div class="col-lg-6 product-image">
            <%= link_to image_tag(p.small_image_url), show_product_path(p.id) %>
          </div>
          <div class="col-lg-6 product-details">
            <div class="col-lg-12 product-name"><%= link_to p.name, show_product_path(p.id) %></div>
            <% if p.product_options.any? %>
              <div class="col-lg-12 product-options"> <%= p.product_options.find_by(name:"standard price").name%>: $<%= sprintf('%.2f', (p.product_options.find_by(name:"standard price").price_in_cents/100))%></div>
            <% else %>
              <div> Price TBD </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row product-container">
  <div class="col-lg-6 product-left">
    <span class="col-lg-12 setup">Learn more about:</span>

    <div class="col-lg-12 product-image-container">
      <%= image_tag(@product.image_url) %>
    </div>
  </div>

  <div class="col-lg-6 product-right">
    <span class="col-lg-12 greeting product-name"><%=@product.name%></span>

    <div class="col-lg-12 product-attrs-container">
      <div class="col-lg-12 product-description-container">
        <span class="attr-name">Product Description:</span>
        <span class="col-lg-12 product-description"><%= @product.description %></span>
      </div>
      <div class="col-lg-12 product-options-container">
        <span class="attr-name">Price Options:</span>
          <% if @product.product_options.any? %>
            <select class="form-control product-options">
              <% @product.product_options.each do |o| %>
              <option><%=o.name%>: $<%= sprintf('%.2f', (o.price_in_cents/100))%></option>
              <% end %>
            </select>
          <% else %>
            <li> Price TBD </li>
          <% end %>
      </div>
    </div>
    <div class="row">

      <form action="/items" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
        <!-- <div class="form-group">
          <input type='text' name="user[email]"  class="form-control" placeholder="e-mail address">
        </div>
        <div class="form-group">
          <input type="password" name="user[password]"  class="form-control" placeholder="Password">
        </div>
        <div class="form-group pw-confirm-group">
          <input type="password" name="user[password_confirmation]" class="form-control" placeholder="Confirm password">
        </div> -->

        <button type='submit' class="col-lg-12 btn btn-primary btn-block add-to-cart" >ADD TO CART</button>
      </form>


    </div>
  </div>
</div>

<div class="row prev-next-product">
  <div class="col-lg-6 prev-product">
    <%= link_to "Previous Product", "/products/#{@product.id-1}" %>
  </div>
  <div class="col-lg-6 next-product">
    <%= link_to "Next Product", "/products/#{@product.id+1}" %>
  </div>
</div>

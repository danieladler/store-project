<div class="welcome">
  Product-specific page for: <span class="greeting"><%=@product.name%></span>
</div>


  <ul>
    <li><strong>Name:       </strong> <%= @product.name %></li>
    <li><strong>Description:</strong> <%= @product.description %></li>
    <li><strong>Image:      </strong> TBD! </li>
    <li><strong>Options:    </strong></li>
      <ul>
        <% @product.product_options.each do |o| %>
          <li><%= o.name %>: <%= sprintf('%.2f',(o.price_in_cents.to_f/100)) %> </li>
        <% end %>
      </ul>
  </ul>
